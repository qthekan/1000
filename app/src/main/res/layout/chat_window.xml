<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/alpha_full"
    tools:context="com.qthekan.qhere.talk.ChatService">

    <LinearLayout
        android:id="@+id/layoutChatWindow"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#7FFFFFFF"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_light_150">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="Room: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRoomName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="qTalk"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnHideWindow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="_"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnStopService"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="X"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black_overlay_150"
            android:maxLines="50"
            android:scrollbars="vertical"
            android:textColor="@color/white"
            android:textIsSelectable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/green_light">

            <TextView
                android:id="@+id/tvNickName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="nickname"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etUserInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnSendMsg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="send"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnShowWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue_light_150"
        android:text="qTalk"
        android:visibility="invisible" />

</FrameLayout>
